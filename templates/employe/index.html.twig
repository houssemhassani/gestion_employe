{% extends 'template.html.twig' %}

{% block title %}Employe index{% endblock %}

{% block body %}

   
    <div class="col-xs-12">
          <div class="box">
             <div class="box-header">
                <h3 class="box-title">List of Employe</h3>
             </div>
             <div class="box-body">
             <div class="box-footer">
                <button  class="btn btn-info pull-right"><a href="{{ path('app_employe_new') }}">New Employe</a></button>
              </div>
              <table id="example2" class="table table-bordered table-hover">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Email</th>
                    <th>Cin</th>
                    <th>Roles</th>
                    <th>NumTel</th>
                    <th>CreatedAt</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                    <tr>
                        <td>{{ user.nom }}</td>
                        <td>{{ user.prenom }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.cin }}</td>
                        <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                        <td>{{ user.numTel }}</td>
                        <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        <td>
                            <a href="{{ path('app_employe_show', {'id': user.id}) }}">Show</a>
                            <a href="{{ path('app_employe_edit', {'id': user.id}) }}">Edit</a>
                            <a href="{{ path('app_attendance_present', {'id': user.id}) }}">Present</a>
                            <a href="{{ path('app_attendance_absent', {'id': user.id}) }}">Absent</a>
                            {% if showButton %}
                                <a href="{{ path('evaluate_employee', {'employee': user.id}) }}">hatanii</a>

                            {% endif %}


                            <a href="{{ path('app_salary_advance_index', {'userId': user.id}) }}">SalaryAdvance</a>
                        </td>
                    </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
        </table>
        </div>
        </div>
        </div>

    
       

    
  
{% endblock %}
