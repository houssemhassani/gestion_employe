{% extends 'base.html.twig' %}

{% block title %}Attendance{% endblock %}

{% block body %}
    <h1>Attendance</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ attendance.id }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ attendance.CreatedAt ? attendance.CreatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdateAt</th>
                <td>{{ attendance.UpdateAt ? attendance.UpdateAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>TypeOfAttendace</th>
                <td>{{ attendance.typeOfAttendace ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_attendance_index') }}">back to list</a>

    <a href="{{ path('app_attendance_edit', {'id': attendance.id}) }}">edit</a>

    {{ include('attendance/_delete_form.html.twig') }}
{% endblock %}
