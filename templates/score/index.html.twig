{% extends 'template.html.twig' %}

{% block title %}Employe index{% endblock %}

{% block body %}


    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">List of Scores for {{ employee.Nom }} {{ employee.Prenom }}</h3>
            </div>
            <div class="box-body">
                <table id="example2" class="table table-bordered table-hover">
                    <thead>
                    <tr>
                        <th>Score Evaluation</th>
                        <th>Comment Evaluation</th>
                        <th>CreatedAt</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for score in scores %}
                        <tr>
                            <td>{{ score.scoreEvaluation }}</td>
                            <td>{{ score.commentEvaluation }}</td>
                            <td>{{ score.createdAt ? score.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="11">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>






{% endblock %}
